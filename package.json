  "repository": {
    "type": "git",
    "url": "https://github.com/robertkirsz/deflect.git"
  },
  "scripts": {
    "start": "sirv public",
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "clean": "rm -rf public/build",
    "lint": "eslint './src/{**/*.js,*.js,**/*.svelte,*.svelte}'",
    "lint:fix": "eslint './src/{**/*.js,*.js,**/*.svelte,*.svelte}' --fix",
    "format": "prettier './src/{**/*.js,*.js,**/*.svelte,*.svelte}'",
    "format:fix": "prettier './src/{**/*.js,*.js,**/*.svelte,*.svelte}' --write --check"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "firebase": "7.14.0",
    "moment": "2.24.0",
    "sirv-cli": "0.4.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-svelte3": "2.7.3",
    "prettier": "2.0.4",
    "prettier-plugin-svelte": "0.7.0",
    "rollup": "2.6.1",
    "rollup-plugin-includepaths": "0.2.3",
    "rollup-plugin-livereload": "1.2.0",
    "rollup-plugin-svelte": "5.2.1",
    "rollup-plugin-terser": "5.3.0",
    "svelte": "3.20.1"
  }
}
